<div
  id="campaign"
  class="carousel slide carousel-fade"
  data-mdb-ride="carousel"
>
  <div class="carousel-indicators">
    <button
      type="button"
      data-mdb-target="#campaign"
      data-mdb-slide-to="0"
      class="active"
      aria-current="true"
      aria-label="Slide 1"
    ></button>
    <button
      type="button"
      data-mdb-target="#campaign"
      data-mdb-slide-to="1"
      aria-label="Slide 2"
    ></button>
    <button
      type="button"
      data-mdb-target="#campaign"
      data-mdb-slide-to="2"
      aria-label="Slide 3"
    ></button>
  </div>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img
        src="https://edit.org/photos/img/blog/glx-free-toy-catalog-banner-advertisement-store-editable-template-.jpg-840.jpg"
        class="d-block w-100"
        alt="Wild Landscape"
      />
    </div>
    <div class="carousel-item">
      <img
        src="https://img.freepik.com/free-vector/hand-drawn-kids-toys-webinar_23-2149651206.jpg"
        class="d-block w-100"
        alt="Camera"
      />
    </div>
    <div class="carousel-item">
      <img
        src="https://img.freepik.com/free-vector/hand-drawn-kids-toys-facebook-post_23-2149614434.jpg"
        class="d-block w-100"
        alt="Exotic Fruits"
      />
    </div>
  </div>
  <button
    class="carousel-control-prev"
    type="button"
    data-mdb-target="#campaign"
    data-mdb-slide="prev"
  >
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button
    class="carousel-control-next"
    type="button"
    data-mdb-target="#campaign"
    data-mdb-slide="next"
  >
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>

<section>
  <div class="m-5 mb-3 pb-4 border-bottom border-top">
    <span><h3 class="m-4 ms-6">NEW PRODUCTS</h3></span>
    <div class="row ps-3">
      {{#each products}}
        <div class="col-xxl-2 col-xl-4 col-md-6 col-sm-12 ps-2 pe-0">
          <div class="card mt-2 ms-2 hover-zoom" style="height: 22rem;">
            <div
              class="bg-image hover-overlay ripple"
              data-mdb-ripple-color="light"
            >
              <img
                src="{{image}}"
                class="img-fluid product-img"
              />
              <a href="products/detail/{{_id}}">
                <div
                  class="mask"
                  style="background-color: rgba(251, 251, 251, 0.15);"
                ></div>
              </a>
            </div>
            <div class="card-body">
              <h5 class="card-title fs-6 text-truncate" style="max-width: 18rem;">{{name}}</h5>
              <p
                class="card-text text-truncate description"
                style="max-width: 18rem;"
              >{{description}}</p>
              <div class="row">
                <div class="col-6">
                  <h6 class="price">${{price}}</h6>
                </div>
                <div class="col-3">
                </div>
              </div>
            </div>
          </div>
        </div>
{{/each}}
    </div>
  </div>

</section>
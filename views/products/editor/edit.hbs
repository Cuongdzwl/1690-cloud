
            <form class="p-4 border rounded" method="post" action="/products/edit/{{id}}">
                <h3 class="fs-4 text-center mb-3">Add Product</h3>
                <div class="form-outline border-bottom mb-4">
                    <input type="text" id="Name" name="name" class="form-control form-control-sm" />
                    <label class="form-label" for="Name">Name</label>
                </div>
                <div class="form-outline border-bottom mb-4">
                    <input type="number" id="Price" name="price" class="form-control form-control-sm" min="0" step="0.01" />
                    <label class="form-label" for="Price">Price</label>
                </div>
                <div class="form-outline border-bottom mb-4">
                    <input type="input" id="Category" name="category" class="form-control form-control-sm" />
                    <label class="form-label" for="Category">Category</label>
                </div>
                <div class="form-outline border-bottom mb-4">
                    <input type="number" id="Quantity" name="quantity" class="form-control form-control-sm" />
                    <label class="form-label" for="Quantity">Quantity</label>
                </div>
                <div class="form-outline mb-4 border-bottom rounded">
                    <textarea class="form-control form-control-sm" style="font-size: small;" name="description" rows="4"></textarea>
                    <label class="form-label" for="description">Additional information</label>
                </div>
                <div class="form-outline mb-4 border-bottom rounded">
                    <input type="text" class="form-control form-control-sm" style="font-size: small;" name="image" id="image" ></input>
                    <label class="form-label" for="image">Additional information</label>
                </div>
                <!-- <div class="mb-4 border-bottom rounded">
                    <label class="form-label" for="customFile"></label>
                    <input type="file" class="form-control form-control-sm" id="customFile" />
                </div> -->

                <!-- Submit button -->
                <button type="submit" class="btn btn-success btn-block mb-4">Add</button>
            </form>
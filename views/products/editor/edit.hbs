
            <div class="container mt-5 pt-6">
            <form class="p-4 border rounded" method="post" action="/products/edit/{{product.id}}">
                <h3 class="fs-4 text-center mb-3">Edit Product</h3>
                <div class=" mb-4">
                    <label class="form-label" for="Name">Name</label>
                    <input required type="text" id="Name" name="name" class="form-control form-control-sm" value="{{product.name}}"/>
                </div>
                <div class=" mb-4">
                    <label class="form-label" for="Price">Price</label>
                    <input required type="number" id="Price" name="price" class="form-control form-control-sm" value="{{product.price}}" min="0" step="0.01" />
                </div>
                <div class=" mb-4">
                    <label class="form-label" for="Category">Category</label>
                    <input required type="input" id="Category" name="category" value="{{product.category}}" class="form-control form-control-sm" />
                </div>
                <div class=" mb-4">
                    <label class="form-label" for="Quantity">Quantity</label>
                    <input required type="number" id="Quantity" name="quantity" value="{{product.quantity}}" class="form-control form-control-sm" />
                </div>
                <div class=" mb-4">
                    <label class="form-label" for="description">Additional information</label>
                    <textarea required class="form-control form-control-sm" style="font-size: small;"  name="description" rows="4">{{product.description}}</textarea>
                </div>
                <div class=" mb-4">
                    <label class="form-label" for="image" >Image URL</label>
                    <input required type="text" class="form-control form-control-sm" style="font-size: small;" value="{{product.image}}" name="image" id="image" ></input>
                </div>
                <!-- <div class="mb-4">
                    <label class="form-label" for="customFile"></label>
                    <input type="file" class="form-control form-control-sm" id="customFile" />
                </div> -->

                <!-- Submit button -->
                <button type="submit" class="btn btn-success btn-block mb-4">Confirm</button>
            </form>
            </div>
